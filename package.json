{
  "name": "mgm-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "vercel-build": "node -e \"const fs=require('fs');fs.mkdirSync('public',{recursive:true});fs.writeFileSync('public/index.html','OK');console.log('no-build');\"",
    "vercel:link": "node scripts/vercel-link.mjs",
    "vercel:pull": "vercel pull --yes --environment=development",
    "dev:api": "vercel dev --listen 3001",
    "dev:front": "cd mgm-front && vite",
    "dev:all": "concurrently -k -n api,front -c blue,green \"vercel dev --listen 3001\" \"cd mgm-front && vite\"",
    "deploy:prod": "vercel --prod --yes",
    "doctor:vercel": "node scripts/doctor-vercel.mjs",
    "doctor:shopify-env": "node -e \"const r=['SHOPIFY_STORE_DOMAIN','SHOPIFY_ADMIN_TOKEN','SHOPIFY_API_VERSION'];const m=r.filter(k=>!process.env[k]);console.log({missing:m});process.exit(m.length?1:0)\"",
    "test": "node --test"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.54.0",
    "sharp": "^0.33.5",
    "tesseract.js": "^5.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
