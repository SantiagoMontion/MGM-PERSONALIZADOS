{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": { "@/*": ["*"] }
  },
  "include": ["lib/**/*", "api/**/*", "scripts/**/*"],
  "exclude": ["**/*.test.*", "**/__tests__/**", "**/__mocks__/**"]
}
